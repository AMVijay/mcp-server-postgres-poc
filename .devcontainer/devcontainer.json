{
    "name": "MCP Server Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "root",
    "userEnvProbe": "none",
    "forwardPorts": [5432],
    "portsAttributes": {
        "5432": {
            "label": "PostgreSQL",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "bash /workspaces/mcp-server-postgres-poc/.devcontainer/init-postgres.sh",
    "initializeCommand": "echo 'Initializing dev container with PostgreSQL...'",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "ms-ossdata.vscode-postgresql"
            ]
        }
    }
}
