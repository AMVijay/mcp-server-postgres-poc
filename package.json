{
  "name": "postgres-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for querying PostgreSQL databases",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "postgres-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test-connection": "tsx src/test-connection.ts",
    "validate-weather": "tsx src/validate-weather.ts",
    "weather": "tsx src/weather-service.ts",
    "weather:tokyo": "tsx src/weather-service.ts city Tokyo",
    "weather:latest": "tsx src/weather-service.ts latest",
    "weather:hot": "tsx src/weather-service.ts hot",
    "weather:stats": "tsx src/weather-service.ts stats",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "postgresql",
    "database",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  }
}
