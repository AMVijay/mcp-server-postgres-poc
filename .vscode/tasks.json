{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run MCP Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Test Database Connection",
			"type": "shell",
			"command": "npm",
			"args": ["run", "test-connection"],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Watch and Rebuild",
			"type": "shell",
			"command": "npm",
			"args": ["run", "watch"],
			"group": "build",
			"isBackground": true,
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}